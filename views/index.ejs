<!doctype html>
<html lang="vi">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="https://demo-chat-box.herokuapp.com/bootstrap/favicon.ico">

    <title>Cover Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="https://demo-chat-box.herokuapp.com/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://demo-chat-box.herokuapp.com/fa/css/font-awesome.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="https://demo-chat-box.herokuapp.com/css/cover.css" rel="stylesheet">
    <link href="https://demo-chat-box.herokuapp.com/css/style.css" rel="stylesheet">
</head>

<body>

    <div class="site-wrapper">

        <div class="site-wrapper-inner">

            <div class="cover-container">

                <% include header %>
                <main role="main" class="inner cover">
                    <div class="row">
                        <div class="col-3 d-none d-sm-block">
                            <h3>Đang online</h3>
                            <div id="list-member">

                            </div>
                        </div>

                        <div class="col-12 col-sm-9">
                            <h3>Story</h3>
                            <div id="chat-box">
                                <div id="chat-block">

                                </div>
                                <div id="chat-status"></div>
                            </div>
                        </div>
                    </div>
                    <div id="chat-form">
                        <div class="form-wrapper">
                            <label class="sr-only" for="message">Message</label>
                            <div class="input-group mb-2 mb-sm-0">
                                <textarea name="message" id="message" class="form-control" placeholder="Viết gì đó..."></textarea>
                                <span class="input-group-btn">
                                    <button type="button" id="send"  class="btn btn-primary">
                                        <i class="fa fa-send"></i> Gửi
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div id="register-form">
                        <h1 class="cover-heading">Đăng ký chat</h1>
                        <div class="user-info">
                            <label class="sr-only" for="username">Username</label>
                            <div class="input-group mb-2 mb-sm-0">
                                <div class="input-group-addon">@</div>
                                <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                                <span class="input-group-btn">
                                    <button type="button" id="register"  class="btn btn-warning">
                                        <i class="fa fa-bolt"></i> Đăng ký
                                    </button>
                                </span>
                            </div>
                            <div id="register-message"></div>
                        </div>
                    </div>
                    
                </main>

                <% include footer %>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script>
        window.jQuery || document.write('<script src="https://demo-chat-box.herokuapp.com/bootstrap/assets/js/vendor/jquery.min.js"><\/script>')
    </script>
    <script src="https://demo-chat-box.herokuapp.com/bootstrap/assets/js/vendor/popper.min.js"></script>
    <script src="https://demo-chat-box.herokuapp.com/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://demo-chat-box.herokuapp.com/socket.io/socket.io.js"></script>
    <script src="https://demo-chat-box.herokuapp.com/js/socket.io.js"></script>
</body>

</html>